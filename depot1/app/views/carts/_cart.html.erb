<% unless cart.line_items.empty? %>
<div class="cart title"> <%= t('.title') %></div>
<table>
	<%= render(cart.line_items) %>
	<tr class="total_line">
	<td colspan="2">Total</td>
	<td class="total_cell"><%= currency_to_locale(cart.total_price) %></td>
	<tr>	
</table>
<%= button_to t('.checkout'), new_order_path, :method => :get, :disabled => @order.present? %>
<%= button_to t('.empty'), cart, :method => :delete, :confirm => 'Are you sure ?' %>
<% end %>