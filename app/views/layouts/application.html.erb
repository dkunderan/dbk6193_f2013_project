<!DOCTYPE html>
<html>
<head>
<title>Pragprog Books Online Store</title>
<%= stylesheet_link_tag "scaffold" %>
<%= stylesheet_link_tag "depot", :media => "all" %>
<%= form_tag store_path, :class => 'locale' do %> 
<%= select_tag 'set_locale',options_for_select(LANGUAGES, I18n.locale.to_s),:onchange => 'this.form.submit()' %>
<%= submit_tag 'submit' %>
<%= javascript_tag "$$('.locale input').each(Element.hide)" %>
<% end %>
<%= javascript_include_tag :defaults %>
<%= csrf_meta_tag %>
<body id="store" >
   <div id="banner">
    <%= image_tag("logo.png") %>
    <%= @page_title || t('.title') %>
    <!--%= @page_title || "Pragmatic Bookshelf" %-->
   </div>
   <div id="columns">
     <div id="side">
	  <div id="cart">
	    <% if @cart %>
	     <%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %> 
	       <%= render @cart %>
         <% end %>
       <% end %>
        
	  </div>
       <a href="http://www...."> <%= t('.home') %></a><br />
       <a href="http://www..../faq"><%= t('.questions') %></a><br />
       <a href="http://www..../news"><%= t('.news') %></a><br />
       <a href="http://www..../contact"><%= t('.contact') %></a><br />
       
       <% if session[:user_id] %> 
        <br />
        <%= link_to 'Orders', orders_path %><br />
        <%= link_to 'Products', products_path %><br /> 
        <%= link_to 'Users', users_path %><br /> 
        <br />
        <%= button_to 'Logout', logout_path, :method => :delete %> 
        <% end %>
     <p><font color= "#bfb"
         font-size = "small">Page was displayed at this <%= Time.now %> time.</p><br/>
         <%= pluralize session[:counter] ,'time' if session[:counter] >= 5 %> </font><br/>
      </div>
     <div id="main">
	   <%= yield %>
    </div>
   </div>
</body>
</html>